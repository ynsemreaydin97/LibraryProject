@model AddBookViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" class="w-50 container">
    <div class="form-group m-2">
        <label>Name</label>
        <input asp-for="book.Name" type="text" class="form-control " />
        @Html.HiddenFor(x => x.book.Id)
    </div>
    <div class="form-group m-2">
        <label>Image URL</label>
        <input asp-for="book.Image" type="text" class="form-control" />
    </div>
    <div class="form-group m-2">
        <label>Author</label>
        <input asp-for="book.Author" type="text" class="form-control" />
    </div>
    <div class="form-group m-2">
        <label>Price</label>
        <input asp-for="book.Price" type="text" class="form-control" />
    </div>
    <div class="form-group m-2">
        <label>Category Name</label>
        <select asp-for="book.Category.Name" class="form-control" onfocus='this.size=5;' onblur='this.size=1;' onchange='this.size=1; this.blur();'>
            @foreach (var item in Model.categories)
            {
                <option>@item.Name</option>
            }
        </select>
    </div>
    <div class="form-group m-2">
        <label for="exampleFormControlSelect1">Stock</label>
        <select asp-for="book.InStock" class="form-control" onfocus='this.size=5;' onblur='this.size=1;' onchange='this.size=1; this.blur();'>
            @for (int i = 1; i < 20; i++)
            {
                <option>@i</option>
            }
        </select>
    </div>
    <div class="form-group m-2">
        <label>Description</label>
        <textarea asp-for="book.Description" class="form-control" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary float-end">Update</button>
</form>


